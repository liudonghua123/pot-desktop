{
    "build": {
        "beforeDevCommand": "pnpm dev",
        "beforeBuildCommand": "pnpm build",
        "devPath": "http://localhost:1420",
        "distDir": "../dist",
        "withGlobalTauri": false
    },
    "package": {
        "productName": "pot",
        "version": "1.4.1"
    },
    "tauri": {
        "allowlist": {
            "all": false,
            "shell": {
                "all": false,
                "open": true
            },
            "globalShortcut": {
                "all": true
            },
            "window": {
                "all": true
            },
            "clipboard": {
                "all": true
            },
            "notification": {
                "all": true
            },
            "dialog": {
                "open": true
            },
            "path": {
                "all": true
            },
            "fs": {
                "readFile": true,
                "scope": ["$CACHE/**"]
            },
            "protocol": {
                "asset": true,
                "assetScope": ["$CACHE/**"]
            },
            "http": {
                "all": true,
                "request": true,
                "scope": ["http://**", "https://**"]
            }
        },
        "bundle": {
            "active": true,
            "category": "Utility",
            "copyright": "GPLv3",
            "deb": {
                "depends": ["libxdo-dev", "libxcb1", "libxrandr2"]
            },
            "externalBin": [],
            "icon": [
                "icons/32x32.png",
                "icons/128x128.png",
                "icons/128x128@2x.png",
                "icons/icon.icns",
                "icons/icon.ico"
            ],
            "identifier": "com.pylogmon.pot",
            "longDescription": "A cross-platform translation software",
            "macOS": {
                "entitlements": null,
                "exceptionDomain": "",
                "frameworks": [],
                "providerShortName": null,
                "signingIdentity": null
            },
            "resources": [],
            "shortDescription": "A cross-platform translation software",
            "targets": "all",
            "windows": {
                "certificateThumbprint": null,
                "digestAlgorithm": "sha256",
                "timestampUrl": "",
                "wix": {
                    "language": "zh-CN"
                },
                "webviewInstallMode": {
                    "silent": true,
                    "type": "embedBootstrapper"
                }
            }
        },
        "security": {
            "csp": "default-src *; img-src 'self' asset: https://asset.localhost data: ; style-src * 'unsafe-inline'; worker-src 'self' blob: ; script-src * 'unsafe-eval';",
            "devCsp": "default-src *; img-src 'self' asset: https://asset.localhost data: ; style-src * 'unsafe-inline'; worker-src 'self' blob: ; script-src * 'unsafe-eval';"
        },
        "updater": {
            "active": true,
            "dialog": false,
            "endpoints": ["https://pot.pylogmon.com/.netlify/functions/update"],
            "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDQ4MUJEQzkyMzVGMEU5NApSV1NVRGw4anliMkJCTXhtcldRb2NzTXZXa1RoVTVaN1dPaTU1RTc3Y3hqMEJ5ekNIOVRvcWZBSQo="
        },
        "windows": [],
        "systemTray": {
            "iconPath": "icons/icon.ico",
            "iconAsTemplate": true
        }
    }
}
